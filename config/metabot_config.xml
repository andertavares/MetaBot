<!-- put this file under <starcraft>/bwapi-data/AI -->
<config>
  <!-- possible values: probabilistic, epsilon-greedy, random-switch, Xelnaga, Skynet, NUSBot -->
  <meta-strategy value="epsilon-greedy" />

  <portfolio>
    <strategy value="Skynet" />
    <strategy value="Xelnaga" />
    <strategy value="NUSBot" />
    <!-- <strategy value="Ximp" /> uncomment to activate Ximp -->
  </portfolio>
  
	<read-dir value="bwapi-data/read/" />
	<write-dir value="bwapi-data/write/" />
  
	<match-output value="output.xml" />
  
	<alpha value="0.2" /> <!-- learning rate for strategy value update on epsilon-greedy -->
	<epsilon value="0.15" /> <!-- exploration coefficient  on epsilon-greedy  -->
	<speed value="0" />
	<gui value="true" />
</config>